@model IEnumerable<AplicacionWebProgramacion3.Models.Plantas>

@{
    ViewData["Title"] = "Plantas";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4 text-success">
                <i class="bi bi-flower1"></i> Listado de Plantas
            </h1>
        </div>
        <div class="col text-end align-self-center">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-success btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
    </div>

    @if (User.IsInRole("adminPlanta"))
    {
        <div class="row mb-3">
            <div class="col text-end">
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Nueva Planta
                </a>
            </div>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-success">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NombreCientifico)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreVulgar)</th>
                    <th>@Html.DisplayNameFor(model => model.Autor)</th>
                    <th>@Html.DisplayNameFor(model => model.EpocaFloracion)</th>
                    <th>@Html.DisplayNameFor(model => model.AlturaMaxima)</th>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NombreCientifico)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombreVulgar)</td>
                        <td>@Html.DisplayFor(modelItem => item.Autor)</td>
                        <td>@Html.DisplayFor(modelItem => item.EpocaFloracion)</td>
                        <td>@Html.DisplayFor(modelItem => item.AlturaMaxima)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1">
                                <i class="bi bi-eye">Detalles</i>
                            </a>
                            @if (User.IsInRole("adminPlanta"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square">Editar</i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash">Eliminar</i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

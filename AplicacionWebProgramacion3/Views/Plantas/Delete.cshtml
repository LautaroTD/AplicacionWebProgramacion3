@model AplicacionWebProgramacion3.Models.Plantas

@{
    ViewData["Title"] = "Eliminar Planta";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h1 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Eliminar Planta</h1>
        </div>
        <div class="card-body">
            <h3 class="text-danger">¿Estás seguro que deseas eliminar esta planta?</h3>
            <div class="mb-4">
                <h4 class="text-secondary">Detalles de la Planta</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.NombreCientifico)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.NombreCientifico)
                    </dd>
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.NombreVulgar)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.NombreVulgar)
                    </dd>
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.Autor)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Autor)
                    </dd>
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.EpocaFloracion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.EpocaFloracion)
                    </dd>
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.AlturaMaxima)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.AlturaMaxima)
                    </dd>
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete" class="d-flex align-items-center gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al listado
                </a>
            </form>
        </div>
    </div>
</div>

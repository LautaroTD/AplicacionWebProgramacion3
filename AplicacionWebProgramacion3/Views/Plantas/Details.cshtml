@model AplicacionWebProgramacion3.Models.Plantas

@{
    ViewData["Title"] = "Detalles de la Planta";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0"><i class="bi bi-flower1"></i> Detalles de la Planta</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.NombreCientifico)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreCientifico)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.NombreVulgar)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreVulgar)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Autor)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Autor)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.EpocaFloracion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EpocaFloracion)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.AlturaMaxima)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AlturaMaxima)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <div>
                @if (User.IsInRole("adminPlanta"))
                {
                    <a class="btn btn-warning me-2" asp-action="Edit" asp-route-id="@Model?.Id">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                }
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Agrega Bootstrap Icons si no están incluidos en tu layout -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

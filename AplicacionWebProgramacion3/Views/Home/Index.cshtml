@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-3 mb-3">Bienvenido</h1>
        </div>
    </div>
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-action="Index" asp-controller="Plantas" class="btn btn-success btn-lg">
                            <i class="bi bi-flower1 me-2"></i> Ir a Plantas
                        </a>
                        <a asp-action="Index" asp-controller="Suelos" class="btn btn-warning btn-lg">
                            <i class="bi bi-tree-fill me-2"></i> Ir a Suelos
                        </a>
                        <a asp-action="Index" asp-controller="Fertilizantes" class="btn btn-info btn-lg">
                            <i class="bi bi-droplet-half me-2"></i> Ir a Fertilizantes
                        </a>
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-action="Index" asp-controller="Usuarios" class="btn btn-danger btn-lg">
                                <i class="bi bi-people-fill me-2"></i> Lista de Usuarios
                            </a>
                        }
                        <hr />
                        @if (!User.IsInRole("admin") && !User.IsInRole("basico") && !User.IsInRole("adminSuelo") && !User.IsInRole("adminFertilizante") && !User.IsInRole("adminPlanta"))
                        {
                            <a asp-action="Login" asp-controller="User" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                            </a>
                            <a asp-action="Register" asp-controller="User" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-person-plus-fill me-2"></i> Registrarse
                            </a>
                        }
                        @if (User.IsInRole("admin") || User.IsInRole("basico") || User.IsInRole("adminSuelo") || User.IsInRole("adminFertilizante") || User.IsInRole("adminPlanta"))
                        {
                        <a asp-action="Logout" asp-controller="User" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
                        </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


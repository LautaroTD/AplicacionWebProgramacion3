@model AplicacionWebProgramacion3.Models.Suelos

@{
    ViewData["Title"] = "Editar Suelo";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Suelo</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del suelo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PH" class="form-label fw-bold"></label>
                            <input asp-for="PH" class="form-control" placeholder="Ingrese el valor de pH" />
                            <span asp-validation-for="PH" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label fw-bold"></label>
                            <input asp-for="Tipo" class="form-control" placeholder="Ingrese el tipo de suelo" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

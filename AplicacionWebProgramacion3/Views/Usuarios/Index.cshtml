@model IEnumerable<AplicacionWebProgramacion3.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">
                <i class="bi bi-people-fill"></i> Usuarios
            </h1>
        </div>
        <div class="col text-end">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
    </div>

    @if (User.IsInRole("admin"))
    {
        <div class="row mb-3">
            <div class="col">
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-person-plus-fill"></i> Nuevo Usuario
                </a>
            </div>
        </div>
    }

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Role)</th>
                        <th>@Html.DisplayNameFor(model => model.Imagen)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <span class="badge bg-info text-dark">@Html.DisplayFor(modelItem => item.Role)</span>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Imagen))
                            {
                                <img src="@item.Imagen" alt="Imagen de @item.Name" class="rounded-circle" style="width:48px; height:48px; object-fit:cover; border:2px solid #dee2e6;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin imagen</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (User.IsInRole("admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

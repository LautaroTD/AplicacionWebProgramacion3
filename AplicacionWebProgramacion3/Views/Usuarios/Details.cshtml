@model AplicacionWebProgramacion3.Models.Usuario

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-person-circle"></i> Detalles del Usuario</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-shield-lock"></i> @Html.DisplayNameFor(model => model.Role)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Role)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-image"></i> @Html.DisplayNameFor(model => model.Imagen)
                </dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Imagen))
                    {
                        <img src="@Model.Imagen" alt="Imagen de usuario" class="img-thumbnail" style="max-width: 150px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>
